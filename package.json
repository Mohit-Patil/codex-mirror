{
  "name": "codex-mirror",
  "version": "0.1.0",
  "description": "Local multi-account manager for Codex CLI with isolated runtime/auth state and TUI clone management.",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "codex-mirror": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.test.json",
    "test": "vitest run",
    "check": "npm run typecheck && npm run test && npm run build",
    "dev": "tsx src/cli.ts",
    "prepack": "npm run build",
    "prepublishOnly": "npm run check"
  },
  "keywords": [
    "codex",
    "cli",
    "mirror"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Mohit-Patil/codex-mirror"
  },
  "bugs": {
    "url": "https://github.com/Mohit-Patil/codex-mirror/issues"
  },
  "homepage": "https://github.com/Mohit-Patil/codex-mirror",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.1",
    "commander": "^14.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^4.0.18"
  }
}
